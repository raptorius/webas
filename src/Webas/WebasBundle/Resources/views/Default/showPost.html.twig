{% extends "@WebasWebas/layout.html.twig" %}

{% block content %}

    {% for comment in comments %}
        <div class="post">
            <h4>{{ comment.user }}</h4>
            <small>{{ comment.comment }} <br/> <br/> {{ comment.dateTime|date('Y-m-d H:i:s') }}</small>
        </div>
    {% endfor %}

    <form action="{{ path('webas_webas_show_post', {'post':post}) }}" method="post" >
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-sm">Komentuoti</button>
    </form>

{% endblock %}