{% extends "@WebasWebas/layout.html.twig" %}

{% block content %}

    {% for post in posts %}
        <div class="post">
            <h4>{{ post.description }}</h4>
            <img src="{{ post.link }}"/><br/>
            <small>Posted by <b>{{ post.user }}</b></small>
            <p class="pull-right">
                <a href="{{ path('webas_webas_show_post', {'post': post.id}) }}" title="Rodyti komentarus"><span class="glyphicon glyphicon-log-out"></span></a>
            </p>
        </div>
    {% endfor %}

{% endblock %}

{% block pre_footer %}
    <a href="{{ path('webas_webas_create_post') }}">Naujas postas</a>
{% endblock %}